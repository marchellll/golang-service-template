SERVICE_NAME=the_service_name
SERVICE_VERSION=1.0.0
ENVIRONMENT=development
HOST=localhost
PORT=8080
# HEALTHCHECK_TIMEOUT_SECONDS=55

# Telemetry Configuration
TELEMETRY_ENABLED=true
TELEMETRY_METRICS_ENABLED=true
TELEMETRY_TRACING_ENABLED=true
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318

# DB_DIALECT=mysql
# # this one for docker-compose
# DB_HOST=mysql
# # this one for non-docker
# DB_HOST=localhost
# DB_PORT=3306
# DB_DBNAME=the_service_database
# DB_USERNAME=the_service_user
# DB_PASSWORD=the_service_password

DB_DIALECT=postgres
# this one for docker-compose
DB_HOST=postgres
# this one for non-docker
# DB_HOST=localhost
DB_PORT=5432
DB_DBNAME=the_service_database
DB_USERNAME=the_service_user
DB_PASSWORD=the_service_password

# this one for docker-compose
REDIS_ADDRESS=redis:6379
# this one for non-docker
# REDIS_ADDRESS=localhost:6379

# ===========================================
# JWT CONFIGURATION (REQUIRED)
# ===========================================
# These were previously hardcoded and are now required
# Generate a secure secret: openssl rand -base64 32
JWT_SECRET=your-secret-key-here-minimum-32-bytes-long
JWT_ISSUER=https://your-service.com
JWT_AUDIENCE=your-audience

# ===========================================
# DATABASE SSL CONFIGURATION
# ===========================================
# Database SSL Mode (was hardcoded as "disable" for postgres)
# Options: disable, require, verify-ca, verify-full
# Should be: require (secure by default)
DB_SSLMODE=disable

# ===========================================
# CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins (was hardcoded as "*")
# Example: https://yourdomain.com,https://app.yourdomain.com
# Leave empty or set to "*" to allow all origins (development only)
ALLOWED_ORIGINS=*
